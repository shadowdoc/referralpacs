<div id="thumbnails">
    <h2>Image Thumbnails</h2>
    <% @encounter.images.each do |i|%>
        <div id="thumbnail-<%= i.id %>" class="thumbnail" >
            <%= link_to(image_tag("/image/thumb/#{i.id}.jpg"), :controller => :image, :action => "view", :id => i) %><br/>
            <%= link_to_remote "remove", :url => {:controller => :image, :action => 'remove_image', :id => i} %>&nbsp;
            <%= link_to('edit', {:controller => :image, :action => "edit_image", :id => i}) %>
        </div>
    <% end %>
</div>