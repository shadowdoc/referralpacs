<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
  <meta content="text/html; charset=ISO-8859-1" http-equiv="content-type">
  <title>ReferralPACS : <%= @page_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<% setup_layout -%>

<%= (@onload ? "<body onload='" + @onload + "'>" : "<body>").html_safe  -%>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">ReferralPACS</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          	<% if session[:user_id] -%>
	          	<% unless @command_list.nil? -%>
		          	<% for command in @command_list %>
		          	    <li class="icon-bar"><%= command %></li>
		          	<% end -%>
	          	<% end -%>
          	<% end -%>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container theme-showcase" role="main">
	    <% if flash[:notice] -%>
	    	<div class="page-header">
	        	<div id="notice"><%= flash[:notice] %></div>
	        </div>
	    <% end -%>
	    <% if @current_patient_banner -%>
			<h3><%= @current_patient_banner %></h3>
      	<% end -%>
    	<%= yield %>
	</div><!--/.container -->
</body>
</html>
