<%= stylesheet_link_tag "ref" %>
<% @load_concepts_js_array = true %>

<% for con in @concepts %>
    <div id="concept">
      <div id="<%=cycle "ListLine0", "ListLine1" %>">
        <%= con.name %>
      </div>
      <div id="description">
        <%= con.description %>
      </div>
      <% for answer in con.answers %>
        <div id="answer">
           <%= answer.concept.name %>
        </div>
      <% end %>
      <div id="link">
        <%= link_to('Show', :action => :show_concept, :id => con) %>
      </div>
    </div>
<% end %>

<%= link_to('New Concept', :action => :show_concept) %>