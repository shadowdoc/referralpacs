<% @page_title = "Edit User" -%>
<% fillCollections -%>

<%= errors_for(@provider) %>

<%= form_for @provider, 
            :url => {:action => "edit_provider", :id => @provider},
            :builder => TaggedBuilder do |f| -%>
    <%= f.text_field :given_name %>
    <%= f.text_field :family_name %>
    <%= f.text_field :email %>
    <%= f.collection_select :privilege_id, @all_privileges, :id, :name %>
    <%= f.text_field :title %>
    <%= submit_tag 'Save' %>
<% end -%>
<%= link_to 'Back', :action => 'list_providers' %>