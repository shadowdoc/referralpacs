<% fillCollections -%>

<%= errors_for(@provider) %>

<%= form_for @provider,
            :url => {:action => "add_provider" },
            :builder => TaggedBuilder  do |f| -%>
    <%= f.text_field :given_name %>
    <%= f.text_field :family_name %>
    <%= f.text_field :email %>
    <%= f.collection_select(:privilege_id, @all_privileges, :id, :name) %>
    <%= f.text_field :title %>
    <%= f.text_field 'password' %>
    <br/>
    <%= submit_tag 'Save' %>
<% end -%>
<br/>
